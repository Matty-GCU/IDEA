<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.BookShelfDao">
	<select id="selectBookShelfById" parameterType="Integer"
		resultType="pojo.SelectBookShelfById">
			select b.*, bs.bname
			from bookshelf bs, book b
			where bs.id = b.shelfid and bs.id=#{id}
		</select>
</mapper>