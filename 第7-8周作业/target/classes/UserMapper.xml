<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.UserMapper">
<!--    <resultMap id="map" type="book.Book">-->
<!--        <association property="author" column="author"/>-->
<!--    </resultMap>-->

    <select id="selectById" parameterType="Integer" resultType="book.Book">
<!--    <select id="selectById" parameterType="Integer" resultMap="map">-->
        select * from book where id=#{id}
    </select>
    <insert id="insertData" parameterType="book.Book" >
        insert into book(name,id,price,author,number,shelfid) values(#{name},#{id},#{price},#{author},#{number},#{shelfid})
    </insert>
    <select id="selectAll" resultType="book.Book">
        select * from book
    </select>
    <select id="selectByName" parameterType="String" resultType="book.Book" >
        select * from book where name like #{name}
    </select>
</mapper>